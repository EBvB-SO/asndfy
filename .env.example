# Database
DATABASE_URL=postgresql://username:password@localhost:5432/ascendify
# For local development, you can use:
# DATABASE_URL=postgresql://postgres:postgres@localhost:5432/ascendify

# JWT Secret Key - Generate a secure random key for production
JWT_SECRET_KEY=your-secret-key-change-this-in-production
# Generate with: openssl rand -hex 32

# OpenAI API Key for plan generation
OPENAI_API_KEY=your-openai-api-key

# SendGrid API Key for email services
SENDGRID_API_KEY=your-sendgrid-api-key

# Application Settings
AUTO_CREATE_MISSING_RESOURCES=False
LOG_LEVEL=INFO

# Server Settings (for production)
HOST=0.0.0.0
PORT=8000

# CORS Settings (update for production)
CORS_ORIGINS=["http://localhost:3000","https://yourdomain.com"]